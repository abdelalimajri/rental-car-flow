<!-- Sidebar Navigation -->
<aside class="bg-gray-900 text-white w-64 min-h-screen flex flex-col">
    <!-- Logo/Brand -->
    <div class="p-6 border-b border-gray-700">
        <div class="flex items-center space-x-3">
            <div class="bg-blue-500 p-2 rounded-lg">
                <i class="fas fa-car text-white text-xl"></i>
            </div>
            <div>
                <h1 class="text-xl font-bold text-blue-400"> {{ app.user.agency.name ?? 'Mon Agence' }}</h1>
                <p class="text-xs text-gray-400">Gestion de location</p>
            </div>
        </div>
    </div>

    <!-- Navigation Menu -->
    <nav class="flex-1 px-4 py-6 space-y-2">
        <!-- Dashboard -->
        <a href="" 
           class="flex items-center px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors {{ app.request.get('_route') == 'app_dashboard' ? 'bg-blue-600' : '' }}">
            <i class="fas fa-tachometer-alt mr-3"></i>
            <span>Tableau de bord</span>
        </a>

        <!-- Clients -->
        <div x-data="{ open: {{ app.request.get('_route') starts with 'app_customer' ? 'true' : 'false' }} }">
            <button @click="open = !open" 
                    class="w-full flex items-center justify-between px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">
                <div class="flex items-center">
                    <i class="fas fa-users mr-3"></i>
                    <span>Clients</span>
                </div>
                <i class="fas fa-chevron-down transition-transform duration-200" 
                   :class="{ 'rotate-180': open }"></i>
            </button>
            <div x-show="open" x-transition class="ml-6 mt-2 space-y-1">
                <a href="{{ path('app_customer') }}" 
                   class="block px-4 py-2 rounded hover:bg-gray-800 text-sm {{ app.request.get('_route') == 'app_customer' ? 'text-blue-400' : 'text-gray-300' }}">
                    Liste des clients
                </a>
                <a href="" 
                   class="block px-4 py-2 rounded hover:bg-gray-800 text-sm {{ app.request.get('_route') == 'app_client_new' ? 'text-blue-400' : 'text-gray-300' }}">
                    Nouveau client
                </a>
            </div>
        </div>

        <!-- Véhicules -->
        <div x-data="{ open: {{ app.request.get('_route') starts with 'app_vehicle' ? 'true' : 'false' }} }">
            <button @click="open = !open" 
                    class="w-full flex items-center justify-between px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors">
                <div class="flex items-center">
                    <i class="fas fa-car mr-3"></i>
                    <span>Véhicules</span>
                </div>
                <i class="fas fa-chevron-down transition-transform duration-200" 
                   :class="{ 'rotate-180': open }"></i>
            </button>
            <div x-show="open" x-transition class="ml-6 mt-2 space-y-1">
                <a href="" 
                   class="block px-4 py-2 rounded hover:bg-gray-800 text-sm {{ app.request.get('_route') == 'app_vehicle_index' ? 'text-blue-400' : 'text-gray-300' }}">
                    Liste des véhicules
                </a>
                <a href="" 
                   class="block px-4 py-2 rounded hover:bg-gray-800 text-sm {{ app.request.get('_route') == 'app_vehicle_new' ? 'text-blue-400' : 'text-gray-300' }}">
                    Nouveau véhicule
                </a>
            </div>
        </div>

    </nav>

    <!-- Footer -->
    <div class="p-4 border-t border-gray-700">
        <div class="text-xs text-gray-400 text-center">
            <p>&copy; 2024 RentAuto</p>
            <p>Version 1.0.0</p>
        </div>
    </div>
</aside>