{% extends 'base.html.twig' %}

{% set search_channel = 'cars' %}

{% block title %}Liste des Véhicules - RentAuto{% endblock %}

{% block content %}
<div class="space-y-4">
    <div
        data-controller="filters"
        data-filters-channel-value="cars"
        data-action="input->filters#onInput change->filters#onInput"
        data-filters-open-value="false"
        class="rounded-lg border border-gray-200 bg-white shadow-sm">
        <div class="flex items-center justify-between px-4 py-3 border-b border-gray-100">
            <h3 class="text-sm font-semibold text-gray-800">Filtres</h3>
            <button type="button"
                    class="inline-flex items-center gap-2 text-sm text-gray-600 hover:text-gray-800"
                    data-action="filters#toggle"
                    data-filters-target="toggle"
                    aria-expanded="false"
                    aria-controls="cars-filters-content">
                <span>Afficher/Masquer</span>
                <svg data-filters-target="chevron" class="h-4 w-4 transition-transform duration-200 rotate-180" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.24a.75.75 0 01-1.06 0L5.25 8.27a.75.75 0 01-.02-1.06z" clip-rule="evenodd" />
                </svg>
            </button>
        </div>
        <div id="cars-filters-content" class="p-4 hidden" data-filters-target="content">
            <div class="grid gap-4 grid-cols-1 md:grid-cols-3">
                <div class="flex flex-col gap-1">
                    <label for="registrationNumber" class="text-sm font-medium text-gray-700">Immatriculation</label>
                    <input id="registrationNumber" name="registrationNumber" type="text" placeholder="Ex: AB-123-CD"
                           class="block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-sm shadow-sm placeholder-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 focus:outline-none" />
                </div>
                <div class="flex flex-col gap-1">
                    <label for="brand" class="text-sm font-medium text-gray-700">Marque</label>
                    <input id="brand" name="brand" type="text" placeholder="Ex: Renault"
                           class="block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-sm shadow-sm placeholder-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 focus:outline-none" />
                </div>
                <div class="flex flex-col gap-1">
                    <label for="model" class="text-sm font-medium text-gray-700">Modèle</label>
                    <input id="model" name="model" type="text" placeholder="Ex: Clio"
                           class="block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-sm shadow-sm placeholder-gray-400 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 focus:outline-none" />
                </div>
                <div class="flex flex-col gap-1">
                    <label for="status" class="text-sm font-medium text-gray-700">Statut</label>
                    <select id="status" name="status" class="block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 focus:outline-none">
                        <option value="">Tous</option>
                        <option value="available">Disponible</option>
                        <option value="reserved">Réservée</option>
                        <option value="rented">Louée</option>
                        <option value="maintenance">Maintenance</option>
                        <option value="retired">Retirée</option>
                    </select>
                </div>
                <div class="flex flex-col gap-1">
                    <label for="fuelType" class="text-sm font-medium text-gray-700">Carburant</label>
                    <select id="fuelType" name="fuelType" class="block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 focus:outline-none">
                        <option value="">Tous</option>
                        <option value="petrol">Essence</option>
                        <option value="diesel">Diesel</option>
                        <option value="hybrid">Hybride</option>
                        <option value="electric">Électrique</option>
                        <option value="lpg">GPL</option>
                    </select>
                </div>
                <div class="flex flex-col gap-1">
                    <label for="transmission" class="text-sm font-medium text-gray-700">Boîte</label>
                    <select id="transmission" name="transmission" class="block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 focus:outline-none">
                        <option value="">Toutes</option>
                        <option value="manual">Manuelle</option>
                        <option value="automatic">Automatique</option>
                    </select>
                </div>
                <div class="flex flex-col gap-1">
                    <label for="category" class="text-sm font-medium text-gray-700">Catégorie</label>
                    <select id="category" name="category" class="block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 focus:outline-none">
                        <option value="">Toutes</option>
                        <option value="economy">Économie</option>
                        <option value="compact">Compacte</option>
                        <option value="midsize">Intermédiaire</option>
                        <option value="suv">SUV</option>
                        <option value="van">Van/Monospace</option>
                        <option value="luxury">Luxe</option>
                    </select>
                </div>
            </div>
            <div class="mt-4">
                <button type="button"
                        class="inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
                        data-action="filters#clear">Réinitialiser</button>
            </div>
        </div>
    </div>

    <div
        data-controller="cars-table"
        data-cars-table-endpoint-value="/api/cars"
        data-cars-table-channel-value="cars"
        data-cars-table-placeholder-value="Aucun véhicule"
        class="relative border border-gray-300 rounded-lg shadow-md p-2 bg-white">
    </div>
</div>
{% endblock %}

